{
  "formats": [
    "babel",
    "jpg",
    "json",
    "png"
  ],
  "paths": {
    "babel": ["./demo", "./src"],
    "jpg": "./demo",
    "json": "./package.json",
    "png": "./demo",
    "css": [
      "./demo",
      "./style.css",
      "./node_modules/purecss",
      "./node_modules/highlight.js/styles/github.css",
      "./node_modules/react-ghfork/gh-fork-ribbon.ie.css",
      "./node_modules/react-ghfork/gh-fork-ribbon.css"
    ]
  },
  "common": {
    "dist": {
      "devtool": "source-map",
      "entry": "./src",
      "output": {
        "path": "./dist",
        "libraryTarget": "umd",
        "library": "Boilerplate"
      },
      "externals": {
        "react": {
          "commonjs": "react",
          "commonjs2": "react",
          "amd": "React",
          "root": "React"
        }
      }
    },
    "test": {
      "paths": {
        "babel": ["./src", "./tests"]
      },
      "actions": [
        "lint"
      ]
    }
  },
  "env": {
    "start": {
      "devtool": "eval-source-map",
      "entry": "./demo",
      "actions": [
        "setEnvironment(development)",
        "lint",
        "enableHMR"
      ],
      "formats": [
        "css"
      ]
    },
    "gh-pages": {
      "entry": {
        "app": "./demo",
        "vendors": [
          "react"
        ]
      },
      "output": {
        "path": "./gh-pages",
        "filename": "[name].[chunkhash].js",
        "chunkFilename": "[chunkhash].js"
      },
      "actions": [
        "setEnvironment(production)",
        "generateCommonsChunk(vendors)",
        "extractCSS(styles)",
        "minify"
      ]
    },
    "dist": {
      "output": {
        "filename": "boilerplate.js"
      }
    },
    "dist:min": {
      "output": {
        "filename": "boilerplate.min.js"
      },
      "actions": [
        "minify"
      ]
    }
  }
}
